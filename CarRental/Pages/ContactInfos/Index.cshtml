@page
@model CarRental.Pages.ContactInfos.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>All Contacts</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            Customer Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactInfo[0].email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactInfo[0].phone)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ContactInfo) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => modelItem.contactIdToName[item.Id])
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.phone)
        </td>
        <td>
            <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
            <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
            <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
        </td>
    </tr>
}
    </tbody>
</table>
